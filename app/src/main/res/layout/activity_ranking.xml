<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".RankingActivity">

    <TextView
        android:id="@+id/rank_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="华容榜"
        android:textColor="#000000"
        android:textSize="72sp"
        app:layout_constraintBottom_toTopOf="@+id/rank_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rank_panel"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:background="#B3000000"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/my_rank"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/my_name"

            android:textColor="#C82020"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/my_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:textColor="#C82020"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/my_pass"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/my_name"

            android:textColor="#C82020"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/rank_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_rank"
            android:layout_toLeftOf="@+id/name_1"
            android:textSize="22sp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/name_1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_name"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/pass_1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name_1"
            android:layout_below="@id/my_pass"
            android:textColor="#FFF"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/rank_2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rank_1"
            android:layout_toLeftOf="@+id/name_2"
            android:textSize="22sp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/name_2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_1"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/pass_2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name_2"
            android:layout_below="@id/pass_1"
            android:textColor="#FFF"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/rank_3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rank_2"
            android:layout_toLeftOf="@+id/name_3"
            android:textSize="22sp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/name_3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_2"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/pass_3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name_3"
            android:layout_below="@id/pass_2"
            android:textColor="#FFF"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/rank_4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rank_3"
            android:layout_toLeftOf="@+id/name_4"
            android:textSize="22sp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/name_4"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_3"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/pass_4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name_4"
            android:layout_below="@id/pass_3"
            android:textColor="#FFF"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/rank_5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rank_4"
            android:layout_toLeftOf="@+id/name_5"
            android:textSize="22sp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/name_5"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_4"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/pass_5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name_5"
            android:layout_below="@id/pass_4"
            android:textColor="#FFF"
            android:textSize="22sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>